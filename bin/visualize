import argparse
import matplotlib.pyplot as plt

from cminject.visualization import DetectorHistogramVisualizer, TrajectoryVisualizer

if __name__ == '__main__':
    def comma_tuple(x):
        a, b = x.split(',')
        return (a, b)

    parser = argparse.ArgumentParser(prog='cminject_visualization',
                                     formatter_class=argparse.MetavarTypeHelpFormatter)
    parser.add_argument('-f', '--file', help='The result (HDF5) file, generated by an experiment run, to plot from.',
                        type=str, required=True)
    parser.add_argument('-t', '--type', help='The type of visualization to show (default: %(default)s).',
                        choices=['hist2d', 'trajectories'], default='trajectories', nargs='?', type=str)
    parser.add_argument('-ds', '--dimension_pairs',
                        help='(Only used and required when --type=hist2d) A list of dimension pairs to plot against '
                             'each other',
                        nargs='*', default=[], type=comma_tuple)
    args = parser.parse_args()

    if args.type == 'hist2d':
        if not hasattr(args, 'dimension_pairs') or not args.dimension_pairs:
            parser.error('If --type is "hist2d", the --dimension_pairs parameter must be passed!')

        visualizer = DetectorHistogramVisualizer(filename=args.file, dimension_pairs=args.dimension_pairs)
        fig, axes = visualizer.visualize()
        plt.show()
        fig.show()
    elif args.type == 'trajectories':
        visualizer = TrajectoryVisualizer(filename=args.file)
        fig, axes = visualizer.visualize()
        plt.show()
        fig.show()
    else:
        print("Unknown or missing plot type, please refer to -h.")